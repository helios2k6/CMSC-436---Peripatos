<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.0.xsd
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<http>
		<http-basic />
		<intercept-url pattern="/admin*" access="ROLE_PROFESSOR" />
		<intercept-url pattern="/courses*" access="ROLE_PROFESSOR" />
		<intercept-url pattern="/assignments*" access="ROLE_PROFESSOR" />
		<intercept-url pattern="/questions*" access="ROLE_PROFESSOR" />
		<form-login />
		<logout />
		<remember-me />
	</http>
	<authentication-manager>
		<authentication-provider>
			<user-service>
				<user name="admin" password="password" authorities="ROLE_PROFESSOR" />
			</user-service>
		</authentication-provider>
	</authentication-manager>
</beans:beans>